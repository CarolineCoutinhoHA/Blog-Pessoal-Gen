{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",  // Alterado para 'node', que é comum e compatível com bundlers
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    //"strict": true,
    "esModuleInterop": true,  // Adicionado para compatibilidade com módulos ES
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    //"noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
