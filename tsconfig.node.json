{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": false,  // Definido como false para evitar erro de importação não utilizada
    "noUnusedParameters": false, // Definido como false para evitar erro de parâmetro não utilizado
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
